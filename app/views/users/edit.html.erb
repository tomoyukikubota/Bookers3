<div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
  <h2>User info</h2>
  <% if @user.errors.any? %>
        <div id="error_explanation">
            <h3><%= pluralize(@user.errors.count, "error") %> prohibited this obj form begin saved:</h3>
            <ul>
                <% @user.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
            </ul>
        </div>
    <% end %>
  <%= form_with model: @user, local:true do |f| %>
  <div class="form-group">
    <lable for="user_name">Name</lable>
    <%= f.text_field :name, class: "form-control name" %>
  </div>

  <div class="form-group">
    <lable for="user_image">Image</lable>
    <%= f.attachment_field :profile_image, class: "form-control-file user_image" %>
  </div>

  <div class="form-group">
    <lable for="user_introduction">Introduction</lable>
    <%= f.text_area :introduction, class: "form-control inttroduction" %>
  </div>

  <div class="form-group">
    <%= f.submit "Update User", class: "btn btn-secondary" %>
  </div>
  <% end %>
</div>